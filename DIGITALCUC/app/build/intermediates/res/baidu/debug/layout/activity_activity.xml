        android:layout_marginBottom="58dp"
        android:background="#00ffffff"
        android:rotation="270"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/imgbtn_r"
